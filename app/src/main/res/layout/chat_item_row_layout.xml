<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clChatItemRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivChatItemPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/profilepic1" />

    <TextView
        android:id="@+id/tvChatItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivChatItemPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivChatItemPic"
        app:layout_constraintTop_toTopOf="@+id/ivChatItemPic"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tvChatItemMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="Messageadadadadadasdasdasdassaasdasdasdasdasdasd"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivChatItemPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivChatItemPic"
        app:layout_constraintTop_toTopOf="@+id/ivChatItemPic"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/tvChatItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Time"
        app:layout_constraintBottom_toBottomOf="@+id/tvChatItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvChatItemName" />
</androidx.constraintlayout.widget.ConstraintLayout>
